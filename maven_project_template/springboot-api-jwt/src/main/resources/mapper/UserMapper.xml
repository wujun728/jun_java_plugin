                    <result column="update_user" property="updateUser"/>
                    <result column="del_flag" property="delFlag"/>
        </resultMap>

        <!-- 通用查询结果列 -->
        <sql id="Base_Column_List">
            id, username, password, nick_name, sex, create_date, create_user, update_date, update_user, del_flag
