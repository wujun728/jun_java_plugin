<mapper namespace="com.opensource.nredis.proxy.monitor.dao.IPsUserDao" >
    <resultMap id="PsUserMap" type="com.opensource.nredis.proxy.monitor.model.PsUser">
        <result property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="userEmail" column="user_email"/>
        <result property="createTime" column="create_time"/>
        <result property="createUser" column="create_user"/>
    </resultMap>

    <insert id="insert" parameterType="com.opensource.nredis.proxy.monitor.model.PsUser">
            <selectKey keyProperty="id" resultType="Integer" order="AFTER">
                SELECT LAST_INSERT_ID() AS id
            </selectKey>
        INSERT INTO ps_user (
        <trim suffixOverrides=",">
                id,
                username,
                password,
                user_email,
                create_time,
                create_user,
        </trim>
        )VALUES(
        <trim suffixOverrides=",">
                    #{id},
                    #{username},
                    #{password},
                    #{userEmail},
                    #{createTime},
                    #{createUser},
        </trim>
        )
    </insert>

    <update id="updateById" parameterType="com.opensource.nredis.proxy.monitor.model.PsUser">
        update ps_user
        <trim prefix="SET" suffixOverrides=",">
            <if test="id != null">id = #{id},</if>
            <if test="username != null">username = #{username},</if>
            <if test="password != null">password = #{password},</if>
            <if test="userEmail != null">user_email = #{userEmail},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="createUser != null">create_user = #{createUser},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteById" parameterType="int">
        delete from ps_user where id = #{id}
    </delete>

    <select id="getById" parameterType="int" resultMap="PsUserMap">
        select * from ps_user where id = #{id}
    </select>

    <select id="getListByCriteria" resultMap="PsUserMap" parameterType="com.opensource.nredis.proxy.monitor.model.PsUser">
        select * from ps_user
        <include refid="select_where_clause"/>
        order by id desc
    </select>

    <sql id="select_where_clause">
        <trim prefix="where" prefixOverrides="AND|OR">
            <if test="id != null"> AND id = #{id} </if>
            <if test="username != null"> AND username = #{username} </if>
            <if test="password != null"> AND password = #{password} </if>
            <if test="userEmail != null"> AND user_email = #{userEmail} </if>
            <if test="createTime != null"> AND create_time = #{createTime} </if>
            <if test="createUser != null"> AND create_user = #{createUser} </if>
        </trim>
    </sql>
    
    <select id="queryPageList" resultMap="PsUserMap">
        select * from ps_user
        <include refid="page_where_clause"/>
        order by id desc
        <if test="page!=null">
            LIMIT #{page.pageSize} OFFSET #{page.begin}
        </if>
    </select>

    <select id="count" resultType="int" parameterType="com.opensource.nredis.proxy.monitor.model.PsUser">
        select count(*) from ps_user
        <include refid="page_where_clause"/>
    </select>

    <sql id="page_where_clause">
        <trim prefix="where" prefixOverrides="AND|OR">
            <if test="queryObject.id != null"> AND id = #{queryObject.id} </if>
            <if test="queryObject.username != null"> AND username = #{queryObject.username} </if>
            <if test="queryObject.password != null"> AND password = #{queryObject.password} </if>
            <if test="queryObject.userEmail != null"> AND user_email = #{queryObject.userEmail} </if>
            <if test="queryObject.createTime != null"> AND create_time = #{queryObject.createTime} </if>
            <if test="queryObject.createUser != null"> AND create_user = #{queryObject.createUser} </if>

           
        </trim>
    </sql>

    <!--extension script-->
</mapper>