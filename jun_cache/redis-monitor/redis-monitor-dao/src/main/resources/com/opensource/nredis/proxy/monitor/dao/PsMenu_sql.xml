<mapper namespace="com.opensource.nredis.proxy.monitor.dao.IPsMenuDao" >
    <resultMap id="PsMenuMap" type="com.opensource.nredis.proxy.monitor.model.PsMenu">
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="icon" column="icon"/>
        <result property="href" column="href"/>
        <result property="parentId" column="parent_id"/>
        <result property="isLeaf" column="is_leaf"/>
        <result property="spread" column="spread"/>
    </resultMap>

    <insert id="insert" parameterType="com.opensource.nredis.proxy.monitor.model.PsMenu">
            <selectKey keyProperty="id" resultType="Integer" order="AFTER">
                SELECT LAST_INSERT_ID() AS id
            </selectKey>
        INSERT INTO ps_menu (
        <trim suffixOverrides=",">
                id,
                title,
                icon,
                href,
                parent_id,
                is_leaf,
                spread,
        </trim>
        )VALUES(
        <trim suffixOverrides=",">
                    #{id},
                    #{title},
                    #{icon},
                    #{href},
                    #{parentId},
                    #{isLeaf},
                    #{spread},
        </trim>
        )
    </insert>

    <update id="updateById" parameterType="com.opensource.nredis.proxy.monitor.model.PsMenu">
        update ps_menu
        <trim prefix="SET" suffixOverrides=",">
            <if test="id != null">id = #{id},</if>
            <if test="title != null">title = #{title},</if>
            <if test="icon != null">icon = #{icon},</if>
            <if test="href != null">href = #{href},</if>
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="isLeaf != null">is_leaf = #{isLeaf},</if>
            <if test="spread != null">spread = #{spread},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteById" parameterType="int">
        delete from ps_menu where id = #{id}
    </delete>

    <select id="getById" parameterType="int" resultMap="PsMenuMap">
        select * from ps_menu where id = #{id}
    </select>

    <select id="getListByCriteria" resultMap="PsMenuMap" parameterType="com.opensource.nredis.proxy.monitor.model.PsMenu">
        select * from ps_menu
        <include refid="select_where_clause"/>
        order by id asc
    </select>

    <sql id="select_where_clause">
        <trim prefix="where" prefixOverrides="AND|OR">
            <if test="id != null"> AND id = #{id} </if>
            <if test="title != null"> AND title = #{title} </if>
            <if test="icon != null"> AND icon = #{icon} </if>
            <if test="href != null"> AND href = #{href} </if>
            <if test="parentId != null"> AND parent_id = #{parentId} </if>
            <if test="isLeaf != null"> AND is_leaf = #{isLeaf} </if>
            <if test="spread != null"> AND spread = #{spread} </if>
        </trim>
    </sql>
    
    <select id="queryPageList" resultMap="PsMenuMap">
        select * from ps_menu
        <include refid="page_where_clause"/>
        order by id desc
        <if test="page!=null">
            LIMIT #{page.pageSize} OFFSET #{page.begin}
        </if>
    </select>
	
	<select id="getMenusByUserId" resultMap="PsMenuMap" >
        SELECT menu.* FROM ps_menu menu, ps_user_menu usermenu where menu.id=usermenu.menu_id
		  and usermenu.user_id= #{psUserId}
        order by menu.id asc
    </select>
	
    <select id="count" resultType="int" parameterType="com.opensource.nredis.proxy.monitor.model.PsMenu">
        select count(*) from ps_menu
        <include refid="page_where_clause"/>
    </select>

    <sql id="page_where_clause">
        <trim prefix="where" prefixOverrides="AND|OR">
            <if test="queryObject.id != null"> AND id = #{queryObject.id} </if>
            <if test="queryObject.title != null"> AND title = #{queryObject.title} </if>
            <if test="queryObject.icon != null"> AND icon = #{queryObject.icon} </if>
            <if test="queryObject.href != null"> AND href = #{queryObject.href} </if>
            <if test="queryObject.parentId != null"> AND parent_id = #{queryObject.parentId} </if>
            <if test="queryObject.isLeaf != null"> AND is_leaf = #{queryObject.isLeaf} </if>
            <if test="queryObject.spread != null"> AND spread = #{queryObject.spread} </if>           
        </trim>
    </sql>

    <!--extension script-->
</mapper>