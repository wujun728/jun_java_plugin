<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_version=1"
             version="0.1">
    <persistence-unit name="hibernateJPA" transaction-type="RESOURCE_LOCAL">
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
            <property name="hibernate.connection.username" value="TestUser" />
            <property name="hibernate.connection.password" value="TestUser" />
            <property name="hibernate.connection.url" value="jdbc:mysql://www.xuelongqy.top:3306/TestDB?useSSL=false&amp;useUnicode=true&amp;characterEncoding=UTF-8" />
            <property name="hibernate.max_fetch_depth" value="3" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
        </properties>
    </persistence-unit>
</persistence>