<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="boot.spring.mapper.ActorMapper">
	<resultMap type="boot.spring.po.Actor" id="actorMap">
		<id column="actor_id" property="id"></id>
		<result column="first_name" property="first_name" />
		<result column="last_name" property="last_name" />
		<result column="last_update" property="last_update" />
	</resultMap>

	<select id="getAllactors" resultMap="actorMap">
		select * from actor
	</select>
	<update id="updateActorbyid"
		parameterType="boot.spring.po.Actor">
		update actor
		<set>
			<if test="first_name != null">
				first_name = #{first_name,jdbcType=VARCHAR},
			</if>
			<if test="last_name != null">
				last_name = #{last_name,jdbcType=VARCHAR},
			</if>
			<if test="last_update != null">
				last_update = #{last_update,jdbcType=TIMESTAMP},
			</if>
		</set>
		where actor_id = #{id,jdbcType=SMALLINT}
	</update>
	<select id="getactorbyid" resultMap="actorMap"
		parameterType="short">
		select * from actor where actor_id=#{id}
	</select>
	<insert id="insertActor" useGeneratedKeys="true"
		keyProperty="id" parameterType="boot.spring.po.Actor">
		insert into actor (first_name,last_name,last_update)
		values (#{first_name},#{last_name},#{last_update})
	</insert>
	<delete id="delete" parameterType="short">
		delete from actor where
		actor_id=#{id}
	</delete>

	<!-- 当需要对表中的数据按照1到多个条件进行检索时，用where+if标签可以减少大量SQL -->
	<select id="selectActorByName" resultMap="actorMap"
		parameterType="boot.spring.po.Actor">
		select * from actor
		<where>
			<if test="first_name != null">
				first_name=#{first_name}
			</if>
			<if test="last_name != null">
				and last_name=#{last_name}
			</if>
		</where>
	</select>
</mapper>